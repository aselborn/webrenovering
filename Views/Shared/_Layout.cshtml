<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - renovering</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/renovering.styles.css" asp-append-version="true" />
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> *@
    <link rel="stylesheet" href="~/css/renovering.css" />

</head>
<body>
    <header>
          <nav class="navbar navbar-expand-md navbar-dark bg-steel fixed-top">
          <div class="container">
            <a class="navbar-brand mr-4" href="/">Renoverings log</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarToggle">
              <div class="navbar-nav mr-auto">
                <a class="nav-item nav-link" href="{{ url_for('main.home')}}">Start</a>
                <a class="nav-item nav-link" href="{{ url_for('main.about')}}">Info</a>
              </div>
              <!-- Navbar Right Side -->
              <div class="navbar-nav ms-auto mb-2 mb-lg-0">
                <a class="nav-item nav-link" href="#">Ny Renovering</a>
                <a class="nav-item nav-link" href="#">Konto</a>
                <a class="nav-item nav-link" href="#">Logga ut</a>

                @* {% if current_user.is_authenticated %}
                <a class="nav-item nav-link" href="{{ url_for('posts.new_post')}}">Ny Renovering</a>
                <a class="nav-item nav-link" href="{{ url_for('users.account')}}">Konto</a>
                <a class="nav-item nav-link" href="{{ url_for('users.logout')}}">Logga ut</a>
                {% else %}
                <a class="nav-item nav-link" href="{{ url_for('users.login')}}">Logga in</a>
                <a class="nav-item nav-link" href="{{ url_for('users.register')}}">Ny användare</a>
                {% endif %} *@
              </div>
            </div>
          </div>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
        <div class="row">
          <div class="col-md-8"> <!-- FLASH MESSAGE! -->
            
          </div>
          <div class="col-md-4">
            <div class="content-section">
              <h3>Snabbinfo</h3>
              <p class='text-muted'>You can put any information here you'd like.
                <ul class="list-group">
                  <li class="list-group-item list-group-item-light">Latest Posts</li>
                  <li class="list-group-item list-group-item-light">Announcements</li>
                  <li class="list-group-item list-group-item-light">Calendars</li>
                  <li class="list-group-item list-group-item-light">etc</li>
                </ul>
              </p>
            </div>
          </div>
        </div>
      </main>

    @* <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - renovering - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
